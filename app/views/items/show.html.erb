                        <p class="recommenditem-prevnext-text"><</p>
                    </div>
                    <% @mercari_items_carousel_category_small.each do |mercari_items_carousel_category_small| %>
                        <div class="recommenditem-box">
                            <a href="http://localhost:3000/items/<%= mercari_items_carousel_category_small.mercari_item_id %>">
