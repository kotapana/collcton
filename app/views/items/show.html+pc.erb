        	                    </div>
        	                    <div class="card-body">
        	                        <div class="card-text-box">
        	                            <h5 class="card-title"><%= mercari_items_carousel_category_medium.item_brand %></h5>
        	                            <p class="card-text"><%= mercari_items_carousel_category_medium.item_title %></p>
        	                        </div>
        	                        <a href="http://localhost:3000/items/<%= mercari_items_carousel_category_medium.mercari_item_id %>" class="card-info stretched-link text-decoration-none text-reset font-weight-bold">¥ <%= mercari_items_carousel_category_medium.item_fee %></a>
        	                    </div>
        	                </div>
        	            </div>
        	        <% end %>
        	    </div>
                <a href="#" class="btn more-button text-white">もっと見る</a>
        	</div>
        </div>

        <div class="items-contents search-contents">
            <h2>類似した<%= @mercari_item.item_category_large %>の中古品</h2>
        	<div class="search-items p-5">
        	    <div class="items-contents-box row">
        	        <% @mercari_items_carousel_category_large.each do |mercari_items_carousel_category_large| %>
        	            <div class="search-card col-auto">
        	                <div class="card rounded-0 shadow-sm">
        	                    <div class="card-img">
        	                        <img src="<%= mercari_items_carousel_category_large.item_image_url %>" class="card-img-top rounded-0" alt="">
        	                    </div>
        	                    <div class="card-body">
        	                        <div class="card-text-box">
        	                            <h5 class="card-title"><%= mercari_items_carousel_category_large.item_brand %></h5>
        	                            <p class="card-text"><%= mercari_items_carousel_category_large.item_title %></p>
        	                        </div>
        	                        <a href="http://localhost:3000/items/<%= mercari_items_carousel_category_large.mercari_item_id %>" class="card-info stretched-link text-decoration-none text-reset font-weight-bold">¥ <%= mercari_items_carousel_category_large.item_fee %></a>
        	                    </div>
        	                </div>
        	            </div>
        	        <% end %>
        	    </div>
                <a href="#" class="btn more-button text-white">もっと見る</a>
        	</div>
        </div>
    </section>
</main>